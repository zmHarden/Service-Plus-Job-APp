generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model Job {
  store        Stores @relation(fields: [storeId], references: [id])
  storeId      Int      
  PO           Int      
  billDate     DateTime  @db.Date
  amountBilled Int?
  amountPaid   Int? 
  installer    Installers? @relation(fields: [installerId], references: [id])
  installerId  Int?

  @@id([storeId, PO])
}

model Installers {
  id          Int     @id @default(autoincrement())
  installer   String @db.VarChar(20)
  jobs Job[]
}

model Stores {
  id          Int @id @default(autoincrement())
  store       String @db.VarChar(4)
  jobs Job[]
}